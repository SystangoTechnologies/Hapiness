{{> header}}
{{> sidebar}}
<div id="page-content-wrapper" class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
            {{> flash}}
                <div class="col-lg-12 user_profile_detail pad-top-10">
                  <h2>Change Password</h2>
                  <div class="col-md-12 change_pass pad-lft-none">
                  <form method='post' class="form_submit" action="/password" >
					<div class="form-group">
						<!-- <div class="col-md-3 pad-lft-none pad-top-10">Current Password:</div> -->
						<div class="col-md-4 pad-lft-none">
						<input type="password" name="oldPassword" class="form-control" placeholder="Current Password"></div>
						<div class="clearfix"></div>
					</div>
					<div class="form-group">
						<!-- <div class="col-md-3 pad-lft-none pad-top-10">New Password:</div> -->
						<div class="col-md-4 pad-lft-none">

						<input type="password" name="newPassword" class="form-control" placeholder="New Password">

						</div>
						<div class="clearfix"></div>
					</div>

					<div class="form-group">
						<!-- <div class="col-md-3 pad-lft-none pad-top-10">Confirm New Password:</div> -->
						<div class="col-md-4 pad-lft-none">
						<input type="password" name="confirmNewPassword" class="form-control" placeholder="Confirm Password"></div>
						<div class="clearfix"></div>
					</div>

					<div class="form-group">
						<div class="col-md-4 pad-lft-none">
						<input type="submit" class="btn action_btn width_100per" value="Save">

						</div>
						<div class="clearfix"></div>
					</div>
					{{> form_security}}
					</form>
                  </div>
                 </div>
	        </div>
        </div>
    </div>